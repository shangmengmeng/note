<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/add_bc"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.anew.note.activity.AddActivity">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:layout_marginTop="80dp">

        <EditText
            android:id="@+id/edit_add"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:maxLength="40"
            android:textSize="13dp"
            android:textColor="@color/Cb3b3b3" />

        <TextView
            android:id="@+id/text_number"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:text="0"
            android:layout_below="@+id/edit_add"
            android:textColor="@color/Cb3b3b3" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/edit_add"
            android:text="/40"
            android:textColor="@color/Cb3b3b3" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@mipmap/date"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="130dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/text_date"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:gravity="center"
            android:text="2016.3.12"
            android:textSize="10dp"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <Button
        android:id="@+id/button_summit"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="@string/save"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:elevation="50dp"
        android:textAllCaps="false"
        android:background="@drawable/button_selector"

        />

</LinearLayout>

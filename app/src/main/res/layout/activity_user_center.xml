<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.anew.note.activity.UserCenterActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/person"
        app:civ_border_color="@color/CDAF7FF"
        app:civ_border_width="2dp" />


    <TextView
        android:layout_marginTop="10dp"
        android:text="@string/user_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        />
    <Button
        android:layout_width="120dp"
        android:id="@+id/btn_image_1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="20dp"
        android:textColor="@color/white"
        android:padding="0dp"
        android:text="@string/avatar_modify"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:background="@drawable/button_selector"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/C1b1b1b"
            android:text="@string/nickname"
            />
        <TextView
            android:id="@+id/text_name_1"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="15"
            android:text="Diary"
            />
        <EditText
            android:id="@+id/edit_name"
            android:visibility="gone"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="15"
            android:background="@null" />

        <Button
            android:id="@+id/btn_change_name"
            android:background="@drawable/button_selector"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:text="@string/modify"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>
    <View
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue_words"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/C1b1b1b"
            android:text="@string/declaration"
            />
        <TextView
            android:id="@+id/text_call_1"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="15"
            android:text="Welcome ~"
            />
        <EditText
            android:id="@+id/edit_call"
            android:visibility="gone"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:maxLines="15" />

        <Button
            android:id="@+id/btn_change_call"
            android:background="@drawable/button_selector"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:text="@string/modify"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>
    <View
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue_words"/>
    <Button
        android:visibility="gone"
        android:id="@+id/btn_cente_save"
        android:layout_gravity="right"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/white"
        android:padding="0dp"
        android:text="保 存"
        android:textSize="16sp"
        android:background="@drawable/button_selector"
        />
</LinearLayout>

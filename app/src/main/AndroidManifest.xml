<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anew.note">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AddActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.NoteListActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.CheckActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.TestActivity" />
        <activity
            android:name=".activity.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.AddSecretActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SecretNoteListActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.DetailActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.AboutActivity">
            android:configChanges="orientation|screenSize|keyboard"
            android:screenOrientation="portrait"
        </activity>
        <activity android:name=".activity.UserCenterActivity"></activity>
    </application>

</manifest>